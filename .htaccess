<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # --- Forcer HTTPS ---
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # --- Rediriger www vers non-www ---
  RewriteCond %{HTTP_HOST} ^www\.laforgedesjoueurs\.fr [NC]
  RewriteRule ^ https://laforgedesjoueurs.fr%{REQUEST_URI} [L,R=301]

  # --- Redirection Discord ---
  RewriteRule ^discord/?$ https://discord.gg/xpDz9AudxW [L,R=302]

  # --- Si le fichier ou dossier existe dÃ©jÃ , ne rien faire ---
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # --- Fallback PHP ---
  RewriteCond %{REQUEST_FILENAME}.php -f
  RewriteRule ^(.+)$ $1.php [L,QSA]
</IfModule>

# ===========================================
# ðŸ”’ SÃ©curitÃ© & Performances
# ===========================================

# DÃ©sactiver lâ€™indexation des dossiers
Options -Indexes

# Bloquer lâ€™accÃ¨s aux fichiers sensibles
<FilesMatch "\.(env|json|lock|config|ini|log|sh|bak|psd|ai|zip|tar\.gz)$">
  Require all denied
</FilesMatch>

# Compression gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache navigateur
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
</IfModule>

